<p style="color: green"><%= notice %></p>

<h1>Companies</h1>

<div id="companies">

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Slug</th>
        <th>Active</th>
        <th>Region</th>
      </tr>
    </thead>
    <tbody>

    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.slug %></td>
        <td><%= company.active %></td>
        <td><%= company.region&.name %></td>
        <td><%= link_to "Show", company %></td>
      </tr>
    <% end %>

    </tbody>
  </table>

</div>

<%= link_to "New company", new_company_path %>
